rentdrive.eu {
    # Backend API
    handle_path /api/* {
        reverse_proxy rentdrivewebapp-backend-1:8080
    }

    # Frontend (everything else)
    handle_path /* {
        reverse_proxy rentdrivewebapp-frontend-1:80
    }

    # Optional: log requests
    log {
        output file /data/caddy/logs/access.log
    }
}
